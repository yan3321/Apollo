{
    "compilerOptions": {
        "module": "nodenext",
        "target": "es6",
        "noImplicitAny": true,
        "strict": true,
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"]
}
