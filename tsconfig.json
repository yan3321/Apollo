{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "noImplicitAny": true,
        "strict": true,
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"]
}
